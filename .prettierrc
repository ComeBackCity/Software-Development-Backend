{
	"printWidth": 100,
	"singleQuote": true,
	"trailingComma": "none",
	"useTabs": true,
	"bracketSpacing": true,
	"tabWidth": 2,
	"arrowParens": "avoid",
	"no-multiple-empty-lines": [2, { "max": 1, "maxBOF": 0 }],
	"overrides": [
		{
			"files": "./*.json",
			"options": {
				"useTabs": true,
				"tabWidth": 1,
				"printWidth": 40
			}
		}
	]
}
